%p#notice= notice
%h1 
  Categories

%br/

%button.btn.btn-primary{'data-toggle' => 'modal', 'data-target' => '#category-new'} Add Category
%br/
%br/

%table.table-striped.table-bordered
  %thead
    %tr
      %th
        Name
      %th{:colspan => "3"}
  %tbody
    - @categories.each do |category|
      %tr
        %td= category.name
        %td= link_to 'Show', category
        %td= link_to 'Edit', edit_category_path(category)
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }
%br/
 
= render 'categories/new', category: Category.new, modal_action: 'Create'