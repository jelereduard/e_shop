    %nav.navbar.is-warning{"alert-label" => "main navigation", :role => "navigation"}
      .navbar-brand
        = link_to root_path, class:"navbar-item" do
          %h1.title.is-5 E-shop
        
      #navbar.navbar-menu
        .navbar-end
          .navbar-item
            .field.is-grouped
              - if user_signed_in?
