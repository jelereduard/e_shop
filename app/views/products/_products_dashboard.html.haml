.container
  .row
    .col.col-lg-10.offset-lg-1
      %p#notice= notice
      %h1 Products
      %br/
      %button.btn.btn-primary{'data-toggle' => 'modal', 'data-target' => '#product-new'} Add Product
      %br/
      %br/
  .row
    .col-lg-12
      %table.table-striped.table-bordered
        %thead
          %tr
            %th.col-lg-6
              Name
            %th.col-lg-6.center{:colspan => "3"}
              Actions
        %tbody
          - @products.each do |product|
            %tr
              %td.col-lg-6= product.name
              %td.col-lg-2= link_to 'Show', product
              %td.col-lg-2= link_to 'Edit', edit_product_path(product)
              %td.col-lg-2= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
  %br/ 
  = render 'products/new', product: Product.new, modal_action: 'Add'